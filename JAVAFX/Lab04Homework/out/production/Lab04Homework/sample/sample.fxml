        <AnchorPane prefHeight="412.0" prefWidth="192.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="412.0" prefWidth="180.0">
                    <children>
                        <TableView fx:id="table" prefHeight="279.0" prefWidth="185.0">
                            <columns>
                                <TableColumn fx:id="profit" prefWidth="84.0" text="Profit" />
