        <BarChart fx:id="bar" barGap="0.0" categoryGap="0.0" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="600.0" title="Profit (PLN, thousands)" BorderPane.alignment="CENTER">
            <xAxis>
                <CategoryAxis fx:id="monthData" endMargin="0.0" prefHeight="67.0" prefWidth="443.0" side="BOTTOM" startMargin="0.0" tickLabelGap="0.0" tickLength="0.0" />
