                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TextField fx:id="textFieldMonth" prefHeight="25.0" prefWidth="107.0" GridPane.columnIndex="1" />
